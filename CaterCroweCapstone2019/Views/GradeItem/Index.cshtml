@model List<CaterCroweCapstone2019.Models.DAL.DALModels.GradeItem>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-active">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Grade</th>
            <th>Type</th>
            @if (@Session["role"] != null && Convert.ToString(Session["role"]).Equals("teacher"))
            {
                <th>@Html.ActionLink("Create", "Create", "GradeItem", null, new { @class = "btn btn-primary" })</th>
            }
            </tr>
    </thead>
    <tbody>
        @foreach (var currentGradeItem in Model)
        {
            <tr>
                <td>@currentGradeItem.Name</td>
                <td>@currentGradeItem.Description</td>
                <td>@currentGradeItem.Grade</td>
                <td>@currentGradeItem.WeightType</td>
                <td>
                @if (@Session["role"] != null && Convert.ToString(Session["role"]).Equals("teacher"))
                {
                    @Html.ActionLink("Edit", "Edit", "GradeItem", new { @id = currentGradeItem.ID }, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Details", "Details", "GradeItem", new { @id = currentGradeItem.ID}, new { @class = "btn btn-secondary" })
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Total Grade: @ViewBag.totalGrade</h2>


